<Application 
    x:Class="Shane.Church.StirlingMoney.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"       
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
	xmlns:util="clr-namespace:Shane.Church.Utility;assembly=Shane.Church.Utility">

    <!--Application Resources-->
    <Application.Resources>
		<local:LocalizedStrings xmlns:local="clr-namespace:Shane.Church.StirlingMoney" x:Key="LocalizedStrings" />
		<local:ChartColors xmlns:local="clr-namespace:Shane.Church.StirlingMoney" x:Key="ChartColors" />
		<util:CurrencyValueConverter x:Key="LocalizedCurrency" />
	</Application.Resources>

    <Application.ApplicationLifetimeObjects>
        <!--Required object that handles lifetime events for the application-->
        <shell:PhoneApplicationService 
            Launching="Application_Launching" Closing="Application_Closing" 
            Activated="Application_Activated" Deactivated="Application_Deactivated"/>
    </Application.ApplicationLifetimeObjects>

</Application>
