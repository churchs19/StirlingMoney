<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:System="clr-namespace:System;assembly=mscorlib">

    <Style x:Key="AppTitleStyle" TargetType="TextBlock" BasedOn="{StaticResource PhoneTextBlockBase}" >
        <Setter Property="FontFamily" Value="/Shane.Church.StirlingMoney.WP;component/Fonts/Fonts.zip#Alegreya Sans SC"/>
    </Style>

    <Style x:Key="AppTextTitle1Style" TargetType="TextBlock" BasedOn="{StaticResource PhoneTextBlockBase}">
        <Setter Property="FontFamily" Value="/Shane.Church.StirlingMoney.WP;component/Fonts/Fonts.zip#Alegreya Sans SC Light"/>
        <Setter Property="FontSize" Value="{StaticResource PhoneFontSizeExtraExtraLarge}"/>
    </Style>

    <Style x:Key="AppTextTitle2Style" TargetType="TextBlock" BasedOn="{StaticResource PhoneTextBlockBase}">
        <Setter Property="FontFamily" Value="/Shane.Church.StirlingMoney.WP;component/Fonts/Fonts.zip#Alegreya Sans SC Light"/>
      <Setter Property="FontSize" Value="{StaticResource PhoneFontSizeLarge}"/>
    </Style>

    <Style x:Key="AppTextTitle3Style" TargetType="TextBlock" BasedOn="{StaticResource PhoneTextBlockBase}">
        <Setter Property="FontFamily" Value="/Shane.Church.StirlingMoney.WP;component/Fonts/Fonts.zip#Alegreya Sans SC Light"/>
      <Setter Property="FontSize" Value="{StaticResource PhoneFontSizeMedium}"/>
    </Style>
    
</ResourceDictionary>

  